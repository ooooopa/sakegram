<!DOCTYPE html>
<html>
  <head>
    <title>Sakegram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Sakegram</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% if logged_in? %>
            <a class="navbar-brand" href="/pictures">Sakegram</a>
          <% else %>
            <a class="navbar-brand" href="/users/new">Sakegram</a>
          <% end %>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
            <li><%= link_to "æŠ•ç¨¿", new_picture_path(current_user.id) %></li>
            <li><%= link_to "#{current_user.name}", user_path(current_user.id) %></li>
            <% else %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}, alert alert-danger text-center") %>
    <% end %>

    <%= yield %>

  <footer class="footer">
    <div class="container">
      <p class="footer-text">DIC-201803 HiranoMayumi</p>
    </div>
  </footer>    
  </body>
</html>
